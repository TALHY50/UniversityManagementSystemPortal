<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniversityManagementSystemPortalWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" />
    <link rel="stylesheet" href="~/UniversityManagementSystemPortalWeb.styles.css" asp-append-version="true" />
    <style>
        #sidebar {
            min-width: 250px;
            max-width: 250px;
            min-height: 100vh;
            background: linear-gradient(to right, #add8e6, white);
            transition: all 0.3s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            font-size: 1.2rem;
        }

            #sidebar .nav-link {
                padding: 0.5rem 1rem;
            }

        #userManagement li a {
            color: white;
            text-decoration: none;
        }

            #userManagement li a:hover {
                background-color: #87cefa;
            }

        #userManagement li.active > a {
            background-color: #87cefa;
        }

            #userManagement li.active > a:hover {
                background-color: #87cefa;
            }

            #userManagement li.active > a:focus {
                background-color: #87cefa;
            }

            #userManagement li.active > a:active {
                background-color: #87cefa;
            }

        #content {
            width: 100%;
            min-height: 100vh;
            transition: all 0.3s;
            padding: 15px;
        }
    </style>


    @await RenderSectionAsync("Styles", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });
    </script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div id="sidebar">
            <div class="sidebar-header">
                <h3>Dashboard</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="#userManagement" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fas fa-users"></i> User Management</a>
                    <ul class="collapse list-unstyled" id="userManagement">
                        <li>
                            <a href="#"><i class="fas fa-user-graduate"></i> Student</a>
                        </li>
                        <li>
                            <a href="#"><i class="fas fa-chalkboard-teacher"></i> Faculty</</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="list-unstyled components mt-auto">
                <li>
                    <a href="#"><i class="fas fa-cog"></i> Settings</a>
                </li>
                <li>
                    <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </div>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info ms-auto">
                        <i class="fas fa-align-left"></i>
                    </button>
                </div>
            </nav>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - UniversityManagementSystemPortalWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
